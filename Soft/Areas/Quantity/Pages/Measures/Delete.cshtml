@page
@using Abc.Pages.Extensions
@model Abc.Soft.Areas.Quantity.Pages.Measures.DeleteModel



<!DOCTYPE html>

@{
    ViewData["Title"] = "Delete";
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
</head>
<body>

    <h1>Delete</h1>
    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Item</h4>
        <hr />
        <dl class="row">
            @Html.DisplayControlsFor(model => model.Item.Code);
            @Html.DisplayControlsFor(model => model.Item.Name);
            @Html.DisplayControlsFor(model => model.Item.Definition);
            @Html.DisplayControlsFor(model => model.Item.ValidFrom);
            @Html.DisplayControlsFor(model => model.Item.ValidTo);
        </dl>

        <form method="post">
            <input type="hidden" asp-for="Item.Id" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-page="./Index">Back to List</a>
        </form>
    </div>
</body>
</html>
